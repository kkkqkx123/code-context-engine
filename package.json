{
    "name": "codebase-index-mcp",
    "version": "1.0.0",
    "description": "Intelligent codebase indexing and analysis MCP service",
    "main": "dist/main.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/main.js",
        "dev": "tsx src/main.ts",
        "dev:memory": "node --max-old-space-size=2048 --expose-gc node_modules/ts-node/dist/bin.js src/main.ts",
        "start:memory": "node --max-old-space-size=4096 dist/main.js",
        "test": "jest",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "typecheck": "tsc --noEmit",
        "format": "prettier --write \"src/**/*.{ts,js}\"",
        "format:check": "prettier --check \"src/**/*.{ts,js}\"",
        "prepare": "husky install",
        "clean": "rimraf dist coverage"
    },
    "keywords": [
        "mcp",
        "code-indexing",
        "semantic-search",
        "code-analysis",
        "vector-database",
        "graph-database"
    ],
    "author": "kkkqkx",
    "license": "MIT",
    "dependencies": {
        "@babel/core": "^7.28.4",
        "@babel/preset-env": "^7.28.3",
        "@modelcontextprotocol/sdk": "^1.17.4",
        "@nestjs/axios": "^4.0.0",
        "@qdrant/js-client-rest": "^1.15.1",
        "axios": "^1.12.2",
        "better-sqlite3": "^11.10.0",
        "chokidar": "^4.0.3",
        "dotenv": "^17.2.1",
        "express": "^5.1.0",
        "inversify": "^7.10.2",
        "ioredis": "^5.7.0",
        "joi": "^18.0.1",
        "openai": "^6.2.0",
        "prom-client": "^15.1.3",
        "reflect-metadata": "~0.2.2",
        "tree-sitter-wasms": "^0.1.13",
        "uuid": "^13.0.0",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@types/better-sqlite3": "^7.6.13",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.3.0",
        "@types/supertest": "^6.0.3",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^8.41.0",
        "@typescript-eslint/parser": "^8.41.0",
        "eslint": "^9.34.0",
        "jest": "^30.1.1",
        "lint-staged": "^16.1.5",
        "prettier": "^3.6.2",
        "ts-jest": "^29.4.1",
        "ts-node": "^10.9.2",
        "tsx": "^4.20.5",
        "typescript": "^5.9.2"
    },
    "ts-node": {
        "esm": false,
        "experimentalSpecifierResolution": "node"
    },
    "engines": {
        "node": ">=18.0"
    }
}
